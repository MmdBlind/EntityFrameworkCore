@model EntityFrameworkCore.Models.Book
@inject EntityFrameworkCore.Classes.ConvertDate ConvertDate
@{
	ViewData["Title"] = "Details";
	Layout = "~/Views/_Admin.cshtml";
}
<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header bg-light">
				<span>اطلاعات کتاب</span>
				<a href="/Admin/Books/Index" style="font-size:13px;" class="float-left"><i class="fa fa-arrow-circle-left"></i> بازگشت به لیست کتاب ها</a>
			</div>
			<div class="card-body">
				<div class="row">
					<div class="col-md-3 d-flex justify-content-center ">
						<img src="https://www.talab.org/wp-content/uploads/2024/01/979929446-talab-org.jpg"
							 height="250"
							 alt="image" />
					</div>

					<div class="col-md-6">
						<p>
							عنوان کتاب : @Model.Title
						</p>
						<p>
							شابک : @Model.ISBN
						</p>
						<p>
							سال انتشار : @Model.PublishYear
						</p>
						<p>
							قیمت : @Model.Price
						</p>
						<p>
							موجودی : @Model.Stock
						</p>
						<p>
							تعداد صفحات : @Model.NumOfPages
						</p>
						<p>
							زبان کتاب : @Model.Language.LanguageName
						</p>
						<p>
							ناشر :  @Model.Publisher.PublisherName
						</p>
						<p>
							تاریخ انتشار :
							@if (Model.PublishDate != null)
							{
								<span>@ConvertDate.ConvertMiladiToShamsi((DateTime)Model.PublishDate,"yyyy/MM/dd")</span>
							}
							else
							{
								<span>-</span>
							}
						</p>
						<p>
							وضعیت :
							@if (Model.IsPublish == true)
							{
								<span>منتشر شده</span>
							}
							else
							{
								<span>پیش نویس</span>
							}
						</p>
						<p>
							خلاصه کتاب : @Model.Summery
						</p>
					</div>
					</divc>
				</div>
			</div>
		</div>
	</div>


