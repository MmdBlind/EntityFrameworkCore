@model IEnumerable<string>
@{
    ViewData["Title"] = "ShowRecoveryCodes";
    Layout = "~/Views/_Admin.cshtml";
}

<h1>
    کد های بازیابی
</h1>

<p class="alert alert-success">
    اگر به اپلیکیشن احراز هویت دسترسی نداشتید می‌توانید از این کد های بازیابی برای ورود به سایت استفاده کنید.
</p>

@if (ViewBag.Alert != null)
{
    <div class="alert alert-success alert-dismissible">
        @ViewBag.Alert
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@foreach (var item in Model as IEnumerable<string>)
{
    <span class="badge badge-info">@item</span>
    <br />
}
